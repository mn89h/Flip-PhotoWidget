<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_surfaceContainer"
    tools:context=".MainActivity">
    <include
        android:id="@+id/widget_container"
        layout="@layout/activity_sub"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/idBtnAddTile"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:contentDescription="@string/add_tile"
            android:text="@string/add_tile"
            app:icon="@drawable/baseline_add_24"
            android:backgroundTint="@color/md_theme_primaryContainer"
            android:textColor="@color/md_theme_primary"
            app:iconTint="@color/md_theme_primary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/idBtnRemTile"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:contentDescription="@string/rem_tile"
            android:text="@string/rem_tile"
            app:icon="@drawable/baseline_remove_24"
            android:backgroundTint="@color/md_theme_errorContainer"
            android:textColor="@color/design_default_color_error"
            app:iconTint="@color/design_default_color_error"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/idBtnCycle"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:contentDescription="@string/cycle_tile"
            android:text="@string/cycle_tile"
            app:icon="@drawable/baseline_autorenew_24"
            android:backgroundTint="@color/md_theme_tertiaryContainer"
            android:textColor="@color/md_theme_tertiary"
            app:iconTint="@color/md_theme_tertiary"/>



    </LinearLayout>

</LinearLayout>
